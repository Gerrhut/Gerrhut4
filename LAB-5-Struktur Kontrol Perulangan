while  a1 < 5:
    soal1 = input("1. Lagu Kebangsaan Indonesia adalah? ")
    if soal1 == jawaban1:
        print ('Jawaban anda benar')
        poin1 = poin+10
        print ('Poin Anda ',poin1)
        a1 += 5
    else:
        print ('Jawaban Salah')
        skip = input( 'Apakah Anda Menyerah? ')
        y = 'Iya'
        t = 'Tidak'
        if skip == y:
            poin1 = 0
            print ('Poin Anda ',poin1)
            a1 += 5
        else:
            a1 += 1
